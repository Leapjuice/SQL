CREATE TABLE friends (
  id INTEGER,
  name TEXT,
  birthday DATE
);

INSERT INTO friends (id, name, birthday)
VALUES (1, 'Ororo Munroe', 1940-05-30);


INSERT INTO friends (id, name, birthday)
VALUES (2, 'Billy Tester', 1984-01-26);

INSERT INTO friends (id, name, birthday)
VALUES (3, 'Marcus Franks', 1986-03-25);

UPDATE friends
SET name = 'Ororo Storm'
WHERE name = 'Ororo Munroe';

ALTER TABLE friends
ADD email TEXT;

UPDATE friends
SET email = 'storm@codecademy.com'
WHERE name = 'Ororo Storm';

DELETE FROM friends
WHERE name = 'Ororo Storm';

SELECT *
FROM friends;
